<mapper namespace="com.wen.awenboot.dao.BizBlogVistorCounterMapper">
	
	<resultMap id="cnt-Map" type="com.wen.awenboot.domain.BizBlogVistorCounter">
		<result property="id" column="ID"/>
		<result property="blogId" column="blog_id"/>
		<result property="cnt" column="cnt"/>
	</resultMap>

	<update id="incrementCnt" parameterType="BizWechatPwd">
		update biz_blog_vistor_counter set cnt = cnt +1 where blog_id = #{blogId}
	</update>
	
</mapper>